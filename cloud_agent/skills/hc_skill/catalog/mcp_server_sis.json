  "toolCount": 10,
  "tools": [
    {
      "name": "RecognizeShortAudio",
      "description": "一句话识别接口,用于短语音的同步识别。一次性上传整个音频,响应中即返回识别结果。",
      "inputSchema": {
        "type": "object",
        "properties": {
          "project_id": {
            "description": "来自公有云的Project ID,用于资源隔离。",
            "type": "string",
            "in": "path"
          },
          "config": {
            "required": [
              "audio_format",
              "property"
            ],
            "properties": {
              "audio_format": {
                "type": "string",
                "description": "支持语音的格式。",
                "enum": [
                  "pcm16k16bit",
                  "pcm8k16bit",
                  "ulaw16k8bit",
                  "ulaw8k8bit",
                  "alaw16k8bit",
                  "alaw8k8bit",
                  "mp3",
                  "aac",
                  "wav",
                  "amr",
                  "amrwb",
                  "auto"
                ],
                "default": "pcm16k16bit"
              },
              "property": {
                "type": "string",
                "description": "所使用的模型特征串。通常是 “语种_采样率_领域”的形式。",
                "enum": [
                  "chinese_16k_general",
                  "chinese_16k_travel",
                  "chinese_8k_common",
                  "chinese_16k_common",
                  "sichuan_16k_common",
                  "cantonese_16k_common",
                  "shanghai_16k_common",
                  "english_8k_common",
                  "english_16k_common"
                ],
                "default": "chinese_16k_common"
              },
              "add_punc": {
                "type": "string",
                "description": "表示是否在识别结果中添加标点,取值为“yes”和“no”,缺省为“no”。",
                "enum": [
                  "yes",
                  "no"
                ],
                "default": "no"
              },
              "vocabulary_id": {
                "type": "string",
                "description": "热词表id,不使用则不填写。"
              },
              "digit_norm": {
                "type": "string",
                "description": "表示是否将语音中的数字识别为阿拉伯数字,取值为“yes” 和 “no”,缺省为“yes”。",
                "enum": [
                  "yes",
                  "no"
                ],
                "default": "yes"
              },
              "need_word_info": {
                "type": "string",
                "description": "表示是否在识别结果中输出分词结果信息,取值为“yes”和“no”,默认为“no”。",
                "enum": [
                  "yes",
                  "no"
                ],
                "default": "no"
              }
            },
            "type": "object",
            "description": "配置信息。"
          },
          "data": {
            "type": "string",
            "description": "语音数据,base64编码,要求base64编码后大小不超过4M,音频时长不超过1分钟。"
          }
        },
        "required": [
          "config",
          "data",
          "project_id"
        ]
      }
    },
