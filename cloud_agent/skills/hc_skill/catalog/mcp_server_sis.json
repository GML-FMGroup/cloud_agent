            "items": {
              "type": "string",
              "description": "",
              "minLength": 1,
              "maxLength": 32
            },
            "maxItems": 1024,
            "minItems": 1
          }
        },
        "required": [
          "contents",
          "language",
          "name",
          "project_id",
          "vocabulary_id"
        ]
      }
    },
