    {
      "name": "CreateVolume",
      "description": "创建按需或包周期云硬盘。",
      "inputSchema": {
        "type": "object",
        "properties": {
          "project_id": {
            "description": "项目ID。",
            "type": "string",
            "in": "path"
          },
          "bssParam": {
            "properties": {
              "chargingMode": {
                "type": "string",
                "description": "功能说明:计费模式。默认值为postPaid。",
                "enum": [
                  "postPaid",
                  "prePaid"
                ],
                "default": "postPaid"
              },
              "isAutoPay": {
                "type": "string",
                "description": "功能说明:是否立即支付。chargingMode为PrePaid时该参数会生效。默认值为false。",
                "enum": [
                  "true",
                  "false"
                ],
                "default": "false"
              },
              "isAutoRenew": {
                "type": "string",
                "description": "功能说明:是否自动续订。chargingMode为prePaid时该参数会生效。默认值为false。",
                "enum": [
                  "true",
                  "false"
                ],
                "default": "false"
              },
              "periodNum": {
                "type": "integer",
                "format": "int32",
                "description": "功能说明:订购周期数,chargingMode为prePaid时该参数会生效,并且该参数为为必选。"
              },
              "periodType": {
                "type": "string",
                "description": "功能说明:订购周期单位。chargingMode为prePaid时该参数会生效,并且该参数为必选。",
                "enum": [
                  "month",
                  "year"
                ]
              }
            },
            "description": "按需和包周期的扩展参数",
            "type": "object",
            "example": "{        \"chargingMode\": \"prePaid\",         \"periodType\": \"year\",         \"periodNum\": 1,         \"isAutoPay\": \"true\",         \"isAutoRenew\": \"true\"    }"
          },
          "volume": {
            "required": [
              "availability_zone",
              "volume_type",
              "size"
            ],
            "properties": {
              "availability_zone": {
                "type": "string",
                "description": "指定要创建云硬盘的可用区。"
              },
              "backup_id": {
                "type": "string",
                "description": "备份ID,从备份创建云硬盘时为必选。"
              },
              "count": {
                "type": "integer",
                "format": "int32",
                "description": "批量创云硬盘的个数。如果无该参数,表明只创建1个云硬盘,目前最多支持批量创建100个。"
              },
              "description": {
                "type": "string",
                "description": "云硬盘的描述。最大支持255个字节。"
              },
              "enterprise_project_id": {
                "type": "string",
                "description": "企业项目ID。创建云硬盘时,给云硬盘绑定企业项目ID。"
              },
              "imageRef": {
                "type": "string",
                "description": "镜像ID,指定该参数表示创建云硬盘方式为从镜像创建云硬盘。"
              },
              "metadata": {
                "type": "object",
                "description": "创建云硬盘的metadata信息  ",
                "additionalProperties": {
                  "type": "string"
                }
              },
              "multiattach": {
                "type": "boolean",
                "description": "是否为共享云硬盘。true为共享盘,false为普通云硬盘。"
              },
              "name": {
                "type": "string",
                "description": "云硬盘名称。"
              },
              "size": {
                "type": "integer",
                "format": "int32",
                "description": "云硬盘大小,单位为GB,其限制如下:"
              },
              "snapshot_id": {
                "type": "string",
                "description": "快照ID,指定该参数表示创建云硬盘方式为从快照创建云硬盘"
              },
              "volume_type": {
                "type": "string",
                "description": "云硬盘类型。",
                "enum": [
                  "SSD",
                  "GPSSD",
                  "SAS",
                  "SATA",
                  "ESSD",
                  "GPSSD2",
                  "ESSD2"
                ]
              },
              "tags": {
                "type": "object",
                "description": "云硬盘标签信息。",
                "additionalProperties": {
                  "type": "string",
                  "description": ""
                }
              },
              "iops": {
                "type": "integer",
                "format": "int32",
                "description": "给云硬盘配置iops,购买GPSSD2、ESSD2类型的云硬盘时必填,其他类型不能设置。"
              },
              "throughput": {
                "type": "integer",
                "format": "int32",
                "description": "给云硬盘配置吞吐量,单位是MiB/s,购买GPSSD2类型云盘时必填,其他类型不能设置。"
              }
            },
            "description": "待创建的云硬盘信息",
            "type": "object",
            "example": "{        \"name\": \"test_volume_3\",         \"availability_zone\": \"az1.dc1\",         \"volume_type\": \"SATA\",         \"size\": 120,         \"description\": \"hehehe\",         \"multiattach\": true,         \"count\": 1    }"
          },
          "server_id": {
            "type": "string",
            "description": "创建云硬盘并挂载到目标虚拟机。"
          },
          "OS-SCH-HNT:scheduler_hints": {
            "properties": {
              "dedicated_storage_id": {
                "type": "string",
                "description": "指定专属存储池ID,表示将云硬盘创建在该ID对应的存储池中。"
              }
            },
            "description": "云硬盘调度参数,可用于指定云硬盘创建到某个专属存储池中",
            "type": "object"
          }
        },
        "required": [
          "project_id",
          "volume"
        ]
      }
